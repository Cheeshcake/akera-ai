---
const { relatedPosts } = Astro.props;
---

<div
  class="container related-posts-container grid grid-cols-1 sm:grid-cols-3 gap-8"
>
  {
    relatedPosts.map((post) => (
      <div class="post flex flex-col">
        <img src={post.frontmatter.image} class="related-post-img rounded-lg" />
        <div class="py-5">
          <h2 class="my-2 font-medium">{post.frontmatter.title}</h2>
          <p>{post.frontmatter.category}</p>
          <div class="flex justify-between items-center">
            <div class="flex">
              <div
                class="like-comm-share rounded-full cursor-pointer flex items-center mt-5"
                id="like-btn"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="#4D4D4D"
                  class="w-6"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z"
                  />
                </svg>
                <p class="text-sm">24.5k</p>
              </div>
              <div class="like-comm-share rounded-full cursor-pointer flex items-center mt-5">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="#4D4D4D"
                  class="w-6"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M12 20.25c4.97 0 9-3.694 9-8.25s-4.03-8.25-9-8.25S3 7.444 3 12c0 2.104.859 4.023 2.273 5.48.432.447.74 1.04.586 1.641a4.483 4.483 0 0 1-.923 1.785A5.969 5.969 0 0 0 6 21c1.282 0 2.47-.402 3.445-1.087.81.22 1.668.337 2.555.337Z"
                  />
                </svg>

                <p class="text-sm">50</p>
              </div>
            </div>
            <a href={post.url}>
              <div class="my-4 flex resource" id="blog-read-more">
                <a href={post.url} class="hover:underline cursor-pointer">
                  Read More
                </a>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="#FFD11A"
                  class="w-6 ml-3 cursor-pointer"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25"
                  />
                </svg>
              </div>
            </a>
          </div>
        </div>
      </div>
    ))
  }
</div>

<style>
  .related-posts-container {
    width: 95%;
    margin: auto;
    margin-top: 50px;
    margin-bottom: 50px;
  }
  .post {
    width: 100%;
  }
  .related-post-img {
    height: 200px;
    object-fit: cover;
  }
</style>
