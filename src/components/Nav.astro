---

<link
  href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.css"
  rel="stylesheet"
/>

<div
  class="top-text text-center flex flex-row justify-center items-center p-3 md:text-sm sm:text-xs"
>
  <p class="cursor-pointer">
    Subscribe to our Newsletter For New & latest Blogs and Resources
  </p>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    class="w-6 ml-3 cursor-pointer"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25"></path>
  </svg>
</div>

<nav class="w-full text-lg md:text-sm sm:text-xs">
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
  >
    <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
      <img src="/src/assets/images/icon.png" class="h-8" alt="Akera Logo" />
      <span class="self-center text-2xl font-semibold whitespace-nowrap"
        >Akera.ai</span
      >
    </a>
    <div class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
      <button
        type="button"
        class="contact-button rounded-lg px-4 py-2 text-center hidden md:block"
        >Contact Us</button
      >
      <button
        data-collapse-toggle="navbar-sticky"
        type="button"
        class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm rounded-lg md:hidden"
        aria-controls="navbar-sticky"
        aria-expanded="false"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="w-5 h-5"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 17 14"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 1h15M1 7h15M1 13h15"></path>
        </svg>
      </button>
    </div>
    <div
      class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1"
      id="navbar-sticky"
    >
      <ul
        class="links flex flex-col p-4 md:p-0 mt-4 font-medium border rounded-lg md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0"
      >
        <li>
          <a
            href="/"
            class="nav-link block py-2 px-3 rounded"
            aria-current="page">Home</a
          >
        </li>
        <li>
          <a href="/posts/news/" class="nav-link block py-2 px-3 rounded"
            >News</a
          >
        </li>
        <li>
          <a href="#" class="nav-link block py-2 px-3 rounded">Podcasts</a>
        </li>
        <li>
          <a href="#" class="nav-link block py-2 px-3 rounded">Resources</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const navLinks = document.querySelectorAll(".nav-link");

    function setActiveLink(this: HTMLElement) {
      navLinks.forEach((link) => link.classList.remove("active"));
      this.classList.add("active");
    }

    navLinks.forEach((link) => {
      link.addEventListener("click", function (this: HTMLElement) {
        setActiveLink.call(this);
      });
    });
  });
</script>

<script
  src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"
></script>
