---
import { videos } from "../js/videos";
---

<div class="videos-container grid grid-cols-1 md:grid-cols-2 gap-8 p-6">
  {
    videos.map((video) => (
      <>
        <div class="video-content-container">
          <div class="thumbnail rounded-t-xl overflow-hidden relative">
            <img
              src={video.thumbnail}
              alt={video.title}
              class="video-img w-full rounded-t-xl"
            />
            <div class=" absolute inset-0 flex items-end justify-between p-4  ">
              <button class="thumbnail-btn bg-white rounded-full p-2 ">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="black"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="white"
                  class="w-6 h-6"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.347a1.125 1.125 0 0 1 0 1.972l-11.54 6.347a1.125 1.125 0 0 1-1.667-.986V5.653Z"
                  />
                </svg>
              </button>
              <span class="thumbnail-duration text-sm ">{video.duration}</span>
            </div>
          </div>
          <div class=" p-4 rounded-b-lg w-full">
            <h3 class="text-lg font-semibold mb-1">{video.title}</h3>
            <p class="video-description text-sm">{video.description}</p>
          </div>
        </div>
      </>
    ))
  }
</div>

<style>
  .video-img{
    height: 300px;
    object-fit: cover;
  }
  .videos-container {
    width: 80%;
    margin: auto;
  }
  .video-description{
    color: var(--color-grey-60);
  }
  .thumbnail::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100px;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, 1) 120%
    );
    pointer-events: none;
  }
 
  

</style>
